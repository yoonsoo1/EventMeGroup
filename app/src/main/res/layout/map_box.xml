<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/map_view"
        android:layout_width="272dp"
        android:layout_height="281dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/event_det"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="26dp"
        android:text="@string/details"
        app:layout_constraintBottom_toBottomOf="@+id/map_view"
        app:layout_constraintStart_toStartOf="@+id/map_view"
        android:ellipsize="end"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_marginStart="12dp"
        android:layout_marginBottom="17dp"
        android:text="Date:"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="@+id/map_view" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:text="Event Name:"
        app:layout_constraintStart_toStartOf="@+id/map_view"
        app:layout_constraintTop_toTopOf="@+id/map_view" />

    <TextView
        android:id="@+id/e_name"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="24dp"
        android:maxWidth="130dp"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/map_view"
        android:ellipsize="end"
        android:maxLines="1"
        />

    <TextView
        android:id="@+id/e_loc"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginTop="10dp"
        android:maxWidth="100dp"
        app:layout_constraintStart_toStartOf="@+id/e_name"
        app:layout_constraintTop_toBottomOf="@+id/e_name"
        tools:maxWidth="130dp" />

    <TextView
        android:id="@+id/e_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="19dp"
        android:text="11/8/2022"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/e_cost" />

    <TextView
        android:id="@+id/e_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginTop="10dp"
        android:text="9:30"
        app:layout_constraintStart_toStartOf="@+id/e_loc"
        app:layout_constraintTop_toBottomOf="@+id/e_loc" />

    <TextView
        android:id="@+id/e_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        android:layout_marginTop="12dp"
        android:text="$5"
        app:layout_constraintStart_toStartOf="@+id/e_time"
        app:layout_constraintTop_toBottomOf="@+id/e_time" />

    <TextView
        android:id="@+id/e_spon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginTop="16dp"
        android:text="USC"
        app:layout_constraintStart_toStartOf="@+id/e_date"
        app:layout_constraintTop_toBottomOf="@+id/e_date" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        android:layout_marginStart="12dp"
        android:text="Sponsor: "
        android:textColor="#455A64"
        app:layout_constraintBottom_toBottomOf="@+id/e_spon"
        app:layout_constraintStart_toStartOf="@+id/map_view"
        app:layout_constraintTop_toTopOf="@+id/e_spon" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:text="Time:"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="10dp"
        android:text="Location:"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:text="Cost:"
        app:layout_constraintBottom_toBottomOf="@+id/e_cost"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/e_cost" />


</androidx.constraintlayout.widget.ConstraintLayout>